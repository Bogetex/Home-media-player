<Window x:Class="HomeMediaPlayer.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SeetingWindow" Height="250" Width="380" FontSize="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0" Header="Image Files" Margin="20">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center">   
            <CheckBox Content=".jpg"/>
            <CheckBox Content=".png"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Column="1" Header="Video Files" Margin="20">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                <CheckBox Content=".mp4"/>
                <CheckBox Content=".Wav"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
